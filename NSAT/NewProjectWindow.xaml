<Window x:Class="NSAT.NewProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NSAT"
        mc:Ignorable="d"
        Title="New Project" Height="150" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tbProjectName" HorizontalAlignment="Left" Height="21" TextWrapping="Wrap" VerticalAlignment="Top" Width="182" Margin="88,26,0,0" PreviewTextInput="NewPrev"/>
        <Label Content="Project Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,21,0,0" Width="83"/>
        <Button x:Name="NewProjectOk" Content="OK" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="50,75,0,0" Click="NewProjectOk_Click"/>
        <Button x:Name="NewProjectCancel" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="150,75,0,0" Click="NewProjectCancel_Click"/>
    </Grid>
</Window>
